{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions":[
    {
      "name": "client",
      "image": "emmanuelgarciads/multi-client",
      "hostname": "client",
      "essential": false
    },
    {
      "name": "server",
      "image": "emmanuelgarciads/multi-server",
      "hostname": "api",
      "essential": false
    },
    {
      "name": "worker",
      "image": "emmanuelgarciads/multi-worker",
      "hostname": "worker",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "emmanuelgarciads/multi-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        "hostPort": 80,
        "cotainerPort": 80
      ],
      "links": ["client", "server"]
    }
  ]
}
